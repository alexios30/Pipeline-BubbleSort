pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/alexios30/Pipeline-BubbleSort',
                    branch: 'main',
                    credentialsId: 'dev'
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("bubblesort-app:latest")
                }
            }
        }

        stage('Test in Docker') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'chmod +x test.sh'
                        sh './test.sh'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                echo '=== DEPLOY AVEC DOCKER ==='
                sh 'docker run --rm bubblesort-app:latest'
            }
        }
    }
}